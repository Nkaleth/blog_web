<h1>New Post for <%=@first_user.name%></h1>
<%= link_to users_path do %>
  <h2>Go back to users</h2>
<% end %>

<%= form_with model: [@first_user, @post], html: { class: 'form-horizontal p-5 w-50' } do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :text, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= form.text_area :text, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: 'btn btn-primary mt-4' %>
    </div>
  </div>
<% end %>