<body class="d-flex flex-column align-items-center">
  <% if @post%>
    <h1>Detailed post:</h1>
    <%= render 'shared/post_detailed', post: @post %>
  <% end %>
  <section class="border border-5 position-relative w-75 p-4 mb-2 mt-2">
    <% if @post.nil? %>
      <p>This post does not exists!</p>
    <% elsif @post.comments.empty?%>
      <p>This post does not have comments!</p> 
    <% elsif @post.comments.count > 0 %>
      <% @post.comments.each do |comment| %>
        <p><%= comment.author.name%>: <%= comment.text%></p>
      <% end %>
    <% end %>
  </section>
  <%= form_with model: [@user, @post, @post.comments.build], url: create_comment_user_post_path(@user, @post), method: :post, local: true, data: { remote: false }, html: { class: 'form-horizontal p-5 w-50' } do |form| %>
    <%= puts "In form" %>
    <div class="form-group">
      <%= form.label :text, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_area :text, class: 'form-control' %>
      </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Create Comment", class: 'btn btn-primary mt-4' %>
    </div>
  </div>
  <% end %>
</body>